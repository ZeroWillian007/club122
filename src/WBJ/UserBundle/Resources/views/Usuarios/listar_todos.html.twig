                            <img src="{{ asset('uploads/fotos/' ~ user.img) }}" style="height:3cm; width:3cm" class="center-block img-responsive" />
                            <hr style="background-color: red;height: 1px; ">
                           
                       </div>
                     
                    {% endfor%} 
                </div>
            </div>
        </div>
        {#controles de paginacion#}
